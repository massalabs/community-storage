# Example configuration for massa-storage-server
#
# Copy this file to `.env` and adjust the values as needed.

# Base directory for stored data
STORAGE_PATH=./data

# HTTP bind address
BIND_ADDRESS=0.0.0.0:4343

# Required: max total storage in GB (uploads rejected when exceeded)
STORAGE_LIMIT_GB=1

# Massa address identifying this storage provider
# Replace with a real Massa address, e.g. AU1...
MASSA_ADDRESS=AU1exampleStorageProvider

STORAGE_REGISTRY_ADDRESS=AS1...

MASSA_JSON_RPC=https://buildnet.massa.net/api/v2

# Logging level
RUST_LOG=info

